body {
    background-color: #DFDCDA;
}

.container {
    width: 950px;
    margin: 0 auto;
    background-color: white;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);

    font-family: "arial", sans-serif;
    color: #897d76;

    h1, h2, h3, h4 {
        font-family: 'Strait', cursive;
    }

    a {
        color: #9F1055;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    textarea {
        min-width: 350px;
        min-height: 150px;
    }

    header {
        position: relative;
        height: 120px;
        border-bottom: 2px solid #897d76;

        font-size: 16px;
        font-family: 'Strait', cursive;

        img {
            padding: 10px;
        }

        ul, li {
            display: inline;
        }

        ul {
            position: absolute;
            margin: 0;
            top: 3px;
            left: 210px;
        }

        li {
            margin: 0 10px;
            padding: 5px 10px;

            line-height: 30px;

            a {
                color: #897d76;
            }

            a:hover {
                text-decoration: none;
            }
        }

        li:hover, li:active, li.enabled {
            border-top: 4px solid #ee1980;
        }

        #info {
            position: absolute;
            bottom: 10px;
            right: 10px;

            font-size: 0.9em;
        }
    }

    #main {
        border-bottom: 2px solid #897d76;

        .page {
            padding: 5px 15px;
        }
    }

    footer {
        padding: 5px;
        background-color: #DADADA;

        font-size: 13px;
        line-height: 20px;
        text-align: right;
        font-family: 'Strait', cursive;

        .facebook {
            color: #3B5998;
        }
    }
}