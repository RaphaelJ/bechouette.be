<div .carrousel>
    <ul>
        $forall (i, (Entity prodId prod, mPicId)) <- topProds
            $if i == 1
                <li .enabled>
                    <a href=@{ProductR prodId}>
                        $maybe picId <- mPicId
                            <img src=@{routePicture picId PicWide}
                                alt="Mise en avant"/>
                        <div .info>
                            <h2>#{productName prod}
                            <span .description>#{productShortDesc prod}
            $else
                <li>
                    <a href=@{ProductR prodId}>
                        $maybe picId <- mPicId
                            <img src=@{routePicture picId PicWide}
                                alt="Mise en avant"/>
                        <div .info>
                            <h2>#{productName prod}
                            <span .description>#{productShortDesc prod}

    <a href=# .previous>
        &lt;
    <a href=# .next>
        &gt;

