<div .carrousel>
    <ul #carrousel>
        $forall (i, (Entity prodId prod, mPic)) <- topProds
            $if i == 1
                <li>
                    <a href=@{ProductR prodId}>
                        $maybe Entity picId pic <- mPic
                         $with picExt <- pictureExtension pic
                            <img src=@{routePicture picId PicWide picExt}
                                alt="Mise en avant"/>
                        <div .info>
                            <h2>#{productName prod}
                            <span .description>#{productShortDesc prod}
            $else
                <li style="display: none">
                    <a href=@{ProductR prodId}>
                        $maybe Entity picId pic <- mPic
                         $with picExt <- pictureExtension pic
                            <img src=@{routePicture picId PicWide picExt}
                                alt="Mise en avant"/>
                        <div .info>
                            <h2>#{productName prod}
                            <span .description>#{productShortDesc prod}

    <a href=# .previous #carrousel_previous>
        &lt;
    <a href=# .next #carrousel_next>
        &gt;

